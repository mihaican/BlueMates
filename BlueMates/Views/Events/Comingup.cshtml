@model IEnumerable<BlueMates.Models.Event>

@{
    ViewData["Title"] = "Coming up events";
}

<link rel="stylesheet" href="./css/cards.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h1>Here you can see all the upcoming events</h1>

<p>
    <a asp-action="Create">Add your own event</a>
</p>


<div>
@foreach (var item in Model)
    {
        <div class="card">

            <img src="@Html.DisplayFor(modelItem => item.Pic)" alt="Avatar" style="width:100%" onclick="location.href='@Url.Action("Details", "Events", new {id = item.Id})'">
        <div class="container">
            <h4 onclick ="location.href='@Url.Action("Details", "Events", new {id = item.Id})'"><b>@item.Name</b></h4>
            <b>@item.StartDate</b>
            <b style ="display: block;">@item.Description</b>
                @{
                    if (ViewBag.interests.ContainsKey(item.Id))
                    {
                        if(ViewBag.interests[item.Id]==2){
                            @: <button class="button going" onclick="location.href='@Url.Action("Going", "Events", new {event_id = item.Id})'">Going</button>
                        }
                        else{
                            @:<button class="button going-false" onclick="location.href='@Url.Action("Going", "Events", new {event_id = item.Id})'">Going</button>
                        }
                        if(ViewBag.interests[item.Id]==1){
                            @:<button class="button interested" onclick="location.href='@Url.Action("Interested", "Events", new {event_id = item.Id})'">Interested</button>
                        }
                        else{
                            @:<button class="button interested-false" onclick="location.href='@Url.Action("Interested", "Events", new {event_id = item.Id})'">Interested</button>
                        }

                    }
                    else{
                        <button class="button going-false" onclick="location.href='@Url.Action("Going", "Events", new {event_id = item.Id})'">Going</button>
                        <button class="button interested-false" onclick="location.href='@Url.Action("Interested", "Events", new {event_id = item.Id})'">Interested</button>

                    }
                }
               
       

        </div>
    </div>
        <p>&nbsp&nbsp&nbsp&nbsp</p>


    }
</div>
